@page "/professions/details"
@using Microsoft.EntityFrameworkCore
@using Ceilufas.Models
@inject IDbContextFactory<Ceilufas.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Profession</h2>
    <hr />
    @if (profession is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@profession.Name</dd>
            <dt class="col-sm-2">NameAr</dt>
            <dd class="col-sm-10">@profession.NameAr</dd>
            <dt class="col-sm-2">FeeValue</dt>
            <dd class="col-sm-10">@profession.FeeValue</dd>
        </dl>
        <div>
            <a href="@($"/professions/edit?id={profession.Id}")">Edit</a> |
            <a href="@($"/professions")">Back to List</a>
        </div>
    }
</div>

@code {
    private Profession? profession;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        profession = await context.Professions.FirstOrDefaultAsync(m => m.Id == Id);

        if (profession is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
