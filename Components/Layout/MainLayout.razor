@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<div class="page d-flex flex-column min-vh-100">
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="">
                <i class="bi bi-building me-2"></i> Ceilufas
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="sessions">
                            <i class="bi bi-calendar-event me-1"></i> Sessions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="auth">
                            <i class="bi bi-shield-lock me-1"></i> Auth Required
                        </a>
                    </li>
                </ul>
                <AuthorizeView>
                    <Authorized>
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @context.User.Identity?.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="Account/Manage">
                                        <i class="bi bi-gear-fill me-1"></i> Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="Account/Logout" method="post">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="@NavigationManager.Uri" />
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="d-flex">
                            <a href="Account/Login" class="btn btn-outline-light me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                            <a href="Account/Register" class="btn btn-light">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-fill">
        <div class="container py-4">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5><i class="bi bi-building me-2"></i> Ceilufas</h5>
                    <p class="text-muted">Providing quality services since @DateTime.Now.Year</p>
                    <div>
                        <a href="#" class="text-light me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-light me-2"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="" class="text-light text-decoration-none"><i class="bi bi-house-door me-1"></i> Home</a></li>
                        <li><a href="sessions" class="text-light text-decoration-none"><i class="bi bi-calendar-event me-1"></i> Sessions</a></li>
                        <li><a href="auth" class="text-light text-decoration-none"><i class="bi bi-shield-lock me-1"></i> Auth Required</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <address>
                        <p><i class="bi bi-geo-alt me-1"></i> 123 Street, City, Country</p>
                        <p><i class="bi bi-envelope me-1"></i> info@ceilufas.com</p>
                        <p><i class="bi bi-telephone me-1"></i> +1 234 567 890</p>
                    </address>
                </div>
            </div>
            <hr class="bg-secondary" />
            <div class="text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year Ceilufas. All rights reserved.</p>
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="container">
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>
                An unhandled error has occurred.
                <a href="." class="reload">Reload</a>
                <button class="dismiss btn-close ms-auto" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>